<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="org.imie.vocabularyapp.HelloController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="TOP_CENTER" spacing="15.0">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Label text="Vocabulaire - Associez les mots" style="-fx-font-size: 16px;"/>

    <GridPane fx:id="gridPane" hgap="20" vgap="10">
        <padding>
            <Insets top="10" bottom="10"/>
        </padding>
    </GridPane>

    <Button text="Valider" onAction="#onValidateButtonClick"/>
    <Label fx:id="scoreLabel" text="Score : " style="-fx-font-weight: bold;"/>
</VBox>
